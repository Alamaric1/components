    method public void setBC(BusinessComponent bc!)

        #super!.setBC(bc!)

        ctrl_name$=#getCtrl().getName()
        if pos(".label"=ctrl_name$)>0 then
            lbl$ = #getBC().getColumnAttributes().getFieldAttribute(ctrl_name$(1,len(ctrl_name$)-6),"LABEL",err=*endif)
            x!=#Ctrl!
            x!.setText(lbl$+":")
        fi
        
    methodend


